#include <iostream>

using namespace std;

bool check_tam_giac(int a, int b, int c){
    if(a+b>c && b+c>a && a+c>b)
        return true;
    return false;
}

int chu_vi_tam_giac(int a, int b, int c){
    return a+b+c;
}

void dang_tam_giac(int a, int b, int c){
    if(a==b && b==c){
        cout << "deu";
    }
    else if(a==b || b==c || a==c){
        cout << "can";
    }
    else if(a*a+b*b==c*c || a*a+c*c==b*b || c*c+b*b==a*a){
        cout << "vuong";
    }
    else{
        cout << "thuong";
    }
}

int main(){
    int a, b, c;
    cin >> a >> b >> c;
    
    if(check_tam_giac(a,b,c)){
        cout << chu_vi_tam_giac(a,b,c) << endl;
        dang_tam_giac(a,b,c);
    }
    else{
        cout << "Invalid";
    }
    
    return 0;
}
